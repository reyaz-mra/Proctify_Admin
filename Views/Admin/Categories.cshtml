@model List<FoodMenu.POCOModels.Menucategory>
@{
    ViewBag.Title = "Manage Categories";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Manage Categories</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #FFFDF6;
            min-height: 100vh;
            color: #333;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 280px;
            background: #FAF6E9;
            border-right: 2px solid #DDEB9D;
            padding: 20px 0;
            position: fixed;
            height: 100vh;
            overflow-y: auto;
            z-index: 1000;
        }

        .logo-section {
            padding: 20px;
            text-align: center;
            border-bottom: 2px solid #DDEB9D;
            margin-bottom: 20px;
        }

        .logo {
            font-size: 2em;
            font-weight: 700;
            color: #A0C878;
            margin-bottom: 10px;
        }

        .logo-subtitle {
            font-size: 0.9em;
            color: #666;
            font-weight: 500;
        }

        .nav-menu {
            padding: 0 20px;
        }

        .nav-item {
            margin-bottom: 5px;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 15px 20px;
            color: #333;
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .nav-link:hover {
            background: #DDEB9D;
            color: #333;
            text-decoration: none;
            transform: translateX(5px);
        }

        .nav-link.active {
            background: #A0C878;
            color: white;
            box-shadow: 0 4px 15px rgba(160, 200, 120, 0.3);
        }

        .nav-icon {
            margin-right: 12px;
            font-size: 1.2em;
            width: 20px;
            text-align: center;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            margin-left: 280px;
            padding: 30px;
            background: #FFFDF6;
        }

        .page-header {
            background: #FAF6E9;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            border: 2px solid #DDEB9D;
        }

        .page-title {
            font-size: 2.2em;
            font-weight: 700;
            color: #333;
            margin: 0;
        }

        .page-subtitle {
            color: #666;
            margin-top: 5px;
            font-size: 1.1em;
        }

        .content-section {
            background: #FAF6E9;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            border: 2px solid #DDEB9D;
        }

        .section-title {
            font-size: 1.5em;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-title::before {
            content: "➕";
            font-size: 1.2em;
        }

        .add-form {
            display: flex;
            gap: 15px;
            align-items: end;
            flex-wrap: wrap;
            padding: 20px;
            background: white;
            border-radius: 10px;
            margin-bottom: 30px;
            border: 2px solid #DDEB9D;
        }

        .form-group {
            flex: 1;
            min-width: 200px;
        }

        .form-label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }

        .form-input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #DDEB9D;
            border-radius: 8px;
            font-size: 1em;
            transition: all 0.3s ease;
            background: white;
        }

        .form-input:focus {
            outline: none;
            border-color: #A0C878;
            box-shadow: 0 0 0 3px rgba(160, 200, 120, 0.1);
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: #A0C878;
            color: white;
            box-shadow: 0 4px 15px rgba(160, 200, 120, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(160, 200, 120, 0.4);
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background: #5a6268;
            transform: translateY(-1px);
        }

        .categories-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            border: 2px solid #DDEB9D;
        }

        .categories-table th {
            background: #A0C878;
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
        }

        .categories-table td {
            padding: 15px;
            border-bottom: 1px solid #DDEB9D;
        }

        .categories-table tr:last-child td {
            border-bottom: none;
        }

        .categories-table tr:hover {
            background: #FAF6E9;
        }

        .category-name-input {
            width: 100%;
            padding: 8px 12px;
            border: 2px solid #DDEB9D;
            border-radius: 6px;
            font-size: 0.9em;
            transition: all 0.3s ease;
        }

        .category-name-input:focus {
            outline: none;
            border-color: #A0C878;
            box-shadow: 0 0 0 2px rgba(160, 200, 120, 0.1);
        }

        .checkbox-wrapper {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .checkbox-input {
            width: 18px;
            height: 18px;
            accent-color: #A0C878;
        }

        .status-badge {
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 0.8em;
            font-weight: 600;
            text-transform: uppercase;
        }

        .status-active {
            background: #DDEB9D;
            color: #155724;
        }

        .status-inactive {
            background: #f8d7da;
            color: #721c24;
        }

        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .alert-success {
            background: #DDEB9D;
            color: #155724;
            border: 1px solid #A0C878;
        }

        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        .empty-state::before {
            content: "📂";
            font-size: 3em;
            display: block;
            margin-bottom: 15px;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .sidebar.open {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                padding: 20px;
            }
            
            .add-form {
                flex-direction: column;
                align-items: stretch;
            }
            
            .form-group {
                min-width: auto;
            }
            
            .categories-table {
                font-size: 0.9em;
            }
            
            .categories-table th,
            .categories-table td {
                padding: 10px;
            }
        }

        /* Mobile Menu Toggle */
        .mobile-menu-toggle {
            display: none;
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1001;
            background: #A0C878;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            font-size: 1.2em;
        }

        @@media (max-width: 768px) {
            .mobile-menu-toggle {
                display: block;
            }
        }
    </style>
</head>
<body>
    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" id="mobileMenuToggle">☰</button>

    <div class="admin-container">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="logo-section">
                <div class="logo">🍽️ FoodMenu</div>
                <div class="logo-subtitle">Restaurant Management</div>
            </div>
            
            <nav class="nav-menu">
                <div class="nav-item">
                    <a href="/Admin/Dashboard" class="nav-link">
                        <span class="nav-icon">📊</span>
                        Dashboard
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/Orders" class="nav-link">
                        <span class="nav-icon">📋</span>
                        Live Orders
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/Analytics" class="nav-link">
                        <span class="nav-icon">📈</span>
                        Sales Analytics
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/Categories" class="nav-link active">
                        <span class="nav-icon">📂</span>
                        Categories
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/MenuItems" class="nav-link">
                        <span class="nav-icon">🍕</span>
                        Menu Items
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/Tables" class="nav-link">
                        <span class="nav-icon">🪑</span>
                        Tables
                    </a>
                </div>
                <div class="nav-item">
                    <a href="/Admin/Settings" class="nav-link">
                        <span class="nav-icon">⚙️</span>
                        Settings
                    </a>
                </div>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="page-header">
                <h1 class="page-title">📂 Manage Categories</h1>
                <p class="page-subtitle">Add and manage menu categories</p>
            </div>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["Error"]
                </div>
            }

            <div class="content-section">
                <h2 class="section-title">Add New Category</h2>
                <form method="post" action="/Admin/AddCategory" class="add-form">
                    <div class="form-group">
                        <label for="categoryName" class="form-label">Category Name</label>
                        <input type="text" id="categoryName" name="categoryName" class="form-input" 
                               placeholder="Enter category name" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Category</button>
                </form>
            </div>

            <div class="content-section">
                <h2 class="section-title">Existing Categories</h2>
                @if (!Model.Any())
                {
                    <div class="empty-state">
                        <div>No categories found</div>
                        <div style="font-size: 0.9em; margin-top: 10px; opacity: 0.7;">
                            Add your first category above
                        </div>
                    </div>
                }
                else
                {
                    <table class="categories-table">
                        <thead>
                            <tr>
                                <th>Category Name</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td>
                                        <form method="post" action="/Admin/UpdateCategory" style="display: flex; gap: 10px; align-items: center;">
                                            <input type="hidden" name="categoryId" value="@category.CategoryId" />
                                            <input type="text" name="categoryName" value="@category.CategoryName" 
                                                   class="category-name-input" required>
                                            <div class="checkbox-wrapper">
                                                <input type="checkbox" name="isActive" value="true" 
                                                       class="checkbox-input" @(category.IsActive == true ? "checked" : "") />
                                                <label style="font-size: 0.9em; color: #666;">Active</label>
                                            </div>
                                            <button type="submit" class="btn btn-secondary" style="padding: 8px 16px; font-size: 0.9em;">
                                                Update
                                            </button>
                                        </form>
                                    </td>
                                    <td>
                                        <span class="status-badge @(category.IsActive == true ? "status-active" : "status-inactive")">
                                            @(category.IsActive == true ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <span style="color: #666; font-size: 0.9em;">
                                            ID: @category.CategoryId
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>

    <script>
        // Mobile menu toggle
        document.getElementById('mobileMenuToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('open');
        });
    </script>
</body>
</html>